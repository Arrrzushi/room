# Room AI Assistant Environment Configuration

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
LOG_LEVEL=INFO

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
NODE_ENV=development

# AI Model Configuration
MODEL_CACHE_DIR=./backend/models
CUDA_VISIBLE_DEVICES=-1  # Set to 0 for GPU usage

# Translation Models
INDICTRANS2_MODEL_PATH=./backend/room_translate/models

# Voice Processing
WHISPER_MODEL_SIZE=base  # Options: tiny, base, small, medium, large
TTS_MODEL_PATH=./backend/room_voice/models

# Storage Configuration
RAG_STORAGE_PATH=./backend/room_rag/storage
AUDIO_STORAGE_PATH=./backend/static/audio

# Security (for production)
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

